@page
@model RazorPagesTutorial.Pages.Employee.DetailsModel
@{
    ViewData["Title"] = "Details";
    var ppath = "/Users/noorisadeq/Projects/RazorPagesTutorial/RazorPagesTutorial/wwwroot/images/" + (Model.Employee.photoPath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@ppath" asp-append-version="true" />
                <h4>Employee Id: @Model.Employee.ID</h4>
                <h4>Employee Email: @Model.Employee.Email</h4>
                <h4>Employee Department: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-page="Index" class="btn btn-primary">Back</a>
                <a asp-page="/Employee/Edit" asp-route-ID="@Model.Employee.ID" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
   